<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/onlygradient"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginTop="20dp"
                android:id="@+id/user_image_header"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/cflogomini"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.278"
                app:layout_constraintStart_toStartOf="@+id/item_block"
                app:layout_constraintTop_toTopOf="@+id/item_block"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="Label"
                android:fontFamily="@font/sfuidisplay_light"
                android:textSize="40dp"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">
                <!-- Left side -->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ratingl"
                        android:layout_marginTop="10dp"
                        android:text="COUNTRY"
                        android:textAlignment="center"
                        android:fontFamily="@font/sfuidisplay_thin"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                         />

                    <TextView
                        android:id="@+id/country1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/country"
                        android:layout_marginTop="3dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/sfuidisplay_light"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/rating1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ratingl"
                        android:text="RATING"
                        android:textAlignment="center"
                        android:fontFamily="@font/sfuidisplay_thin"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        />

                    <TextView
                        android:id="@+id/ratingl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/country"
                        android:layout_marginTop="3dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/sfuidisplay_light"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:layout_marginBottom="10dp"/>

                    <!-- Organization -->

                    <TextView
                        android:id="@+id/organization"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ratingl"
                        android:text="ORGANIZATION"
                        android:textAlignment="center"
                        android:fontFamily="@font/sfuidisplay_thin"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:id="@+id/organization1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/country"
                        android:layout_marginTop="3dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/sfuidisplay_light"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:layout_marginBottom="10dp"/>

                    <!-- Max up -->

                    <TextView
                        android:id="@+id/maxup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ratingl"
                        android:text="MAX UP"
                        android:textAlignment="center"
                        android:fontFamily="@font/sfuidisplay_thin"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        />

                    <TextView
                        android:id="@+id/maxup1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/country"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/sfuidisplay_light"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="30dp" />




                </LinearLayout>
                <!-- Right side -->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="CITY"
                        android:fontFamily="@font/sfuidisplay_thin"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:id="@+id/city1"
                        android:fontFamily="@font/sfuidisplay_light"
                        android:layout_marginTop="3dp"
                        android:textAlignment="center"
                        android:textSize="30dp"
                        android:layout_marginBottom="10dp"/>

                    <!-- Max rating -->
                    <TextView
                        android:id="@+id/maxRating"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="MAX RATING"
                        android:fontFamily="@font/sfuidisplay_thin"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:id="@+id/maxRating1"
                        android:fontFamily="@font/sfuidisplay_light"
                        android:layout_marginTop="3dp"
                        android:textAlignment="center"
                        android:textSize="30dp"
                        android:layout_marginBottom="10dp"/>

                    <!-- Contribution -->

                    <TextView
                        android:id="@+id/contribution"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="CONTRIBUTION"
                        android:fontFamily="@font/sfuidisplay_thin"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:id="@+id/contribution1"
                        android:fontFamily="@font/sfuidisplay_light"
                        android:layout_marginTop="3dp"
                        android:textAlignment="center"
                        android:textSize="30dp"
                        android:layout_marginBottom="10dp"/>

                    <!-- Max down -->

                    <TextView
                        android:id="@+id/maxdown"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="MAX DOWN"
                        android:fontFamily="@font/sfuidisplay_thin"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:id="@+id/maxdown1"
                        android:fontFamily="@font/sfuidisplay_light"
                        android:layout_marginTop="3dp"
                        android:textAlignment="center"
                        android:textSize="30dp"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    <com.github.mikephil.charting.charts.BarChart
        android:layout_marginTop="30dp"
        android:id="@+id/barchart"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@+id/maxdown1" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@+id/barchart" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart1"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@+id/piechart" />

        <TextView
            android:id="@+id/tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/piechart1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="TAGS"
            android:fontFamily="@font/sfuidisplay_light"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_marginBottom="15dp"
            android:textStyle="normal" />

    <me.gujun.android.taggroup.TagGroup
        android:id="@+id/tag_group"
        style="@style/TagGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:atg_textColor="@color/back"
        android:layout_below="@+id/tag"/>


    </LinearLayout>

</ScrollView>